
@model IEnumerable<User>

@{
    ViewBag.Title = "All Users";
}

<h1>All Users</h1>

@if (Model.Any())
{
    foreach (var user in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                User Id : @user.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">Fullname : @user.FullName</h5>
                <h5 class="card-title">Username : @user.UserName</h5>
                <h5 class="card-title">Email : @user.UserName</h5>
            </div>
            <div class="card-footer">
                <a asp-controller="RoleManager" asp-action="EditUser" asp-area="" asp-route-id="@user.Id" class="btn btn-danger">Edit</a>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No users created yet
        </div>
        
    </div>
}

