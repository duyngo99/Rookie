@model BackEnd.ViewModel.EditUserViewModel

<form method="post">
    <div class="form-group row">
        <label asp-for="ID" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="ID" disabled class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="UserName" >
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="FullName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="FullName" >
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" >
        </div>
    </div>

     <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Cập nhật</button>
            <a asp-action="ListUsers" asp-controller="RoleManager" class="btn btn-primary">Hủy</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>User Roles</h3>
        </div>
        <div class="card-body">
            @if (Model.Roles.Any())
            {
                foreach (var role in Model.Roles)
                {
                    <h5 class="card-title">@role</h5>
                }
            }
            else
            {
                <h5 class="card-title">Empty</h5>
            }
        </div>
        <div class="card-footer">
            <a href="#" style="width:auto" class="btn btn-primary">
                Role Manager
            </a>
        </div>
    </div>
</form>