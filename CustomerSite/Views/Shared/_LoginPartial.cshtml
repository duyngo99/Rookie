@using System.Security.Claims;
    @if (User.Identity.IsAuthenticated)
    {
        
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Account" asp-action="SignOut">Logout</a>
        </li>   
        <li class="nav-item">
            <span class="navbar-text text-dark">Hello <a class="text-dark" asp-controller="Account" asp-action="MyProfile">@User.Identity.Name  </a>!</span>
        </li>
        <li class="nav-item">
            <span class="navbar-text text-dark">Hello <a class="text-dark" asp-controller="Account" asp-action="MyProfile">@((ClaimsIdentity)User.Identity).Claims.FirstOrDefault(x => x.Type == claimType); </a>!</span>
        </li>
        
        
    }

    

    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Account" asp-action="SignIn">Login</a>
        </li>
    }
